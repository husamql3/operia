# Operia AI Agent Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Environment
# =============================================================================
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO

# =============================================================================
# Azure OpenAI / Microsoft Foundry Configuration
# =============================================================================
# Your Azure OpenAI or Microsoft Foundry endpoint
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com

# API Key (optional if using managed identity via Azure SDK)
AZURE_OPENAI_API_KEY=your-api-key-here

# Model deployment name
AZURE_OPENAI_DEPLOYMENT=gpt-4o

# API version
AZURE_OPENAI_API_VERSION=2024-05-01-preview

# =============================================================================
# Agent Configuration
# =============================================================================
AGENT_NAME=Operia
AGENT_MEMORY_WINDOW_DAYS=7
AGENT_MAX_PROPOSALS_PER_BATCH=20
AGENT_TEMPERATURE=0.3
AGENT_MAX_TOKENS=4000

# =============================================================================
# Database Configuration (for future backend)
# =============================================================================
DATABASE_URL=postgresql+asyncpg://localhost:5432/operia
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# =============================================================================
# Integration: Notion
# =============================================================================
# Get your API key from: https://www.notion.so/my-integrations
INTEGRATION_NOTION_API_KEY=
INTEGRATION_NOTION_DATABASE_ID=

# =============================================================================
# Integration: Slack
# =============================================================================
# Create a Slack app at: https://api.slack.com/apps
INTEGRATION_SLACK_BOT_TOKEN=
INTEGRATION_SLACK_APP_TOKEN=
INTEGRATION_SLACK_SIGNING_SECRET=

# =============================================================================
# Integration: GitHub
# =============================================================================
# Create a token at: https://github.com/settings/tokens
INTEGRATION_GITHUB_TOKEN=
INTEGRATION_GITHUB_ORG=
